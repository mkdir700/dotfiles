{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "mcp": {
    "browsermcp": {
      "command": [
        "npx",
        "-y",
        "@browsermcp/mcp@latest"
      ],
      "enabled": false,
      "type": "local"
    },
    "context7": {
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true,
      "type": "local"
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    }
  },
  "model": "openai/gpt-5.3-codex",
  "plugin": [
    "oh-my-opencode",
    "opencode-supermemory@latest"
  ],
  "provider": {
    "anthropic": {
      "options": {
        "baseURL": "https://cc.z2blog.com/v1"
      }
    },
    "google": {
      "options": {
        "baseURL": "https://cc.z2blog.com/v1beta"
      }
    },
    "openai": {
      "models": {
        "gpt-5.1-codex-max": {
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            }
          }
        },
        "gpt-5.2": {
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "none": {
              "reasoningEffort": "none",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            }
          }
        },
        "gpt-5.3-codex": {
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            }
          }
        },
        "gpt-5.3-codex-spark": {
          "limit": {
            "context": 128000,
            "output": 64000
          }
        }
      },
      "name": "OpenAI",
      "options": {
        "baseURL": "https://cc.z2blog.com/v1",
        "include": [
          "reasoning.encrypted_content"
        ],
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "store": false,
        "textVerbosity": "medium"
      }
    }
  }
}